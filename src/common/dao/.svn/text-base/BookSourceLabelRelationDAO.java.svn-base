	}
	
	public List<BookSourceLabelRelationDTO> getByWhere(Map<String,Object> whereMap) throws SQLException{
		List<Integer> list=SqlBuilder.getSqlMapClient().queryForList("BookSourceLabelRelation.getByWhere",whereMap);
